<style>
    main {
        width: 90%;
    }

    header {
        margin-top: 50px;
    }

    .box {
        padding: 0;
        margin-top: 50px;
        border: solid;
    }

    .tile {
        padding: 0;
    }

    #swiftly {
        font-size: 2.5em;
        margin: auto, 0;
        transform: rotate(-90deg);
        padding: 10px;
        margin-top: 100px;
    }

    .menu img {
        padding: 5px;
        margin-top: 20px;
    }

    .menu a {
        font-size: 1.5em;
        margin: auto, 0;
        transform: rotate(-90deg);
        padding: 10px;
        margin-top: 40px;
    }
</style>
<div class="column ">
    <h1 class="title is-1 has-text-centered ">Closet</h1>

    <div class="columns ">
        {{!-- FOR EACH OUTFIT --}}
        {{#each outfit}}
        <div class="column ">
            <div class="box">
                <div class="tile">
                    <div class="tile is-parent is-vertical">
                        <section class="tile is-child">
                            <img src={{this.dresses}} />
                        </section>
                        <section class="tile is-child">
                            <img src={{this.tops}} />
                        </section>
                    </div>
                    <div class="tile is-parent is-vertical">
                        <section class="tile is-child">
                            <img src={{this.pants}} />
                        </section>
                        <section class="tile is-child">
                            <img src={{this.shoes}} />
                        </section>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>
<div class="modal" id="modal">
    <div class="modal-background"></div>
    <div class="modal-content">
        <div class="card">
            <div class="card-image">
                <figure class="image is-4by3">
                    <img id="matchPhoto" src="images/1-15-2017.jpg" alt="Placeholder image" />
                </figure>
            </div>
            <div class="card-content">
                <div class="media">
                    <div class="media-content">
                        <p class="title is-4"></p>
                    </div>
                </div>

                <div class="content">
                    <p>This should be a comment from the database!</p>
                </div>
            </div>
        </div>
        <article class="media">
            <div class="media-content">
                <div class="field">
                    <p class="control">
                        <textarea class="textarea" placeholder="Add a comment..."></textarea>
                    </p>
                </div>
                <nav class="level">
                    <div class="level-left">
                        <div class="level-item">
                            <a class="button is-info">Submit</a>
                        </div>
                    </div>
                    <div class="level-right">
                        <div class="level-item">
                            <label class="checkbox">
                                <input type="checkbox" /> Press enter to submit
                            </label>
                        </div>
                    </div>
                </nav>
            </div>
        </article>
    </div>
    <button class="modal-close is-large" aria-label="close"></button>
</div>