<style>
    img {
        margin-right: auto;
        margin-left: auto;
    }

    button {
        padding: 1.5em;
        margin: 2em;
    }

    h1 {
        font-family: "hypatia-sans-pro", sans-serif;
    }

    .menu a:hover {
        background-color: transparent;
    }

    #swiftly {
        font-family: "hypatia-sans-pro", sans-serif;
        color: black;
        font-weight: 400;
        font-style: normal;
        font-size: 3em;
        transform: rotate(-90deg);
        padding: 10px;
        margin-top: 100px;
    }

    .menu img {
        padding: 5px;
        margin-top: 20px;
    }

    .menu a {
        font-family: "hypatia-sans-pro", sans-serif;
        font-weight: 400;
        font-style: normal;
        font-size: 1.8em;
        color: black;
        margin: auto, 0;
        transform: rotate(-90deg);
        padding: 10px;
        margin-top: 40px;
    }
</style>

<div class="column is-11">
    <h1 class="title is-1 has-text-centered">Build an Outfit</h1>

    {{!-- for each TOPS --}}
    <h2 class=" has-text-centered"> Choose a Top</h2>
    <div id="tops" class="w3-content w3-display-container">
        {{#each Tops}}
        <img class="mySlides1" data-type="top" id="mySlides1_{{this.id}}" src={{this.url}} style="height:250px" />
        {{/each}}


        <button class="chooseMe button is-rounded w3-display-left" onclick="plusDivs(-1, 0)">
            &#10094;
        </button>
        <button class="chooseMe button is-rounded w3-display-right" onclick="plusDivs(1, 0)">
            &#10095;
        </button>
    </div>


    <div id="bottoms" class="w3-content w3-display-container">
        {{!-- for each BOTTOMS --}}
        <h2 class=" has-text-centered"> Choose a Bottom</h2>
        {{#each Pants}}

        <img class="mySlides2 " data-type="bottom" id="mySlides2_{{this.id}}" src={{this.url}} style=" height:250px;" />

        {{/each}}

        <button class="chooseMe button is-rounded w3-display-left" onclick="plusDivs(-1, 1)">
            &#10094;
        </button>
        <button class="chooseMe button is-rounded w3-display-right" onclick="plusDivs(1, 1)">
            &#10095;
        </button>
    </div>

    <div id="dresses" class="w3-content w3-display-container">
        {{!-- for each DRESS --}}
        <h2 class=" has-text-centered"> Choose a Dress</h2>
        {{#each Dresses}}
        <img class="mySlides3" data-type="dresses" id="mySlides3_{{this.id}}" src={{this.url}} style="height:250px" />

        {{/each}}

        <button class="chooseMe button is-rounded w3-display-left" onclick="plusDivs(-1, 2)">
            &#10094;
        </button>
        <button class="chooseMe button is-rounded w3-display-right" onclick="plusDivs(1, 2)">
            &#10095;
        </button>
    </div>
    <div id="shoes" class="w3-content w3-display-container">
        {{!-- for each SHOE --}}
        <h2 class=" has-text-centered"> Choose Shoes</h2>
        {{#each Shoes}}
        <img class="mySlides4" data-type="shoe" src={{this.url}} id="mySlides4_{{this.id}}" style="height:250px;" />

        {{/each}}

        <button class="chooseMe button is-rounded w3-display-left" onclick="plusDivs(-1, 3)">
            &#10094;
        </button>
        <button class="chooseMe button is-rounded w3-display-right" onclick="plusDivs(1, 3)">
            &#10095;
        </button>
    </div>
    <div class="columns ">
        <div class="column is-offset-4">
            <div class="column">
                {{!-- ADDS THESE CHOOSEN CLOTHES TO THE OUTFIT PAGE/TABLE --}}
                <button type="submit" id="saveOutfit" class=" button is-rounded">Save this Look!</button>

                {{!-- TAKES  USER TO THE OUTFITS PAGE--}}
                <a href="/closet">
                    <button class="button is-rounded">My Outfits</button>
                </a>
            </div>
        </div>
    </div>