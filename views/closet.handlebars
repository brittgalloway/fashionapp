<style>
    img {
        margin-right: auto;
        margin-left: auto;
    }

    button {
        padding: 1.5em;
        margin: 2em;
    }
</style>
<div class="columns is-gapless">
    <div class="column is-1">
        <aside class="menu">
            <p class="menu-label">
                <a href="/">
                    <img src="..\public\images\swiftly-06wingLogo.svg" />
                </a>
            </p>
            <p id="swiftly" class="menu-label">
                Swiftly
            </p>
            <ul class="menu-list">
                <li><a href="/browse">Start</a></li>
                <li><a href="/closet">Closet</a></li>
                <li><a href="/outfit">Outfits</a></li>
                <li><a href="#">About</a></li>
            </ul>
        </aside>
    </div>
    <div class="column is-11">
        <h1 class="title is-1 has-text-centered">Closet</h1>
        {{!-- for each TOPS --}}
        <div id="tops" class="w3-content w3-display-container">
            {{#each tops}}
            <img class="mySlides1" src="{{choosenTop.url}}" style="height:250px" />


            <button class="button is-rounded w3-display-left" onclick="plusDivs(-1, 0)">
                &#10094;
            </button>
            <button class="button is-rounded w3-display-right" onclick="plusDivs(1, 0)">
                &#10095;
            </button>
            {{/each}}
        </div>


        <div id="bottoms" class="w3-content w3-display-container">
            {{!-- for each BOTTOMS --}}
            {{#each bottoms}}
            <img class="mySlides2" src="{{choosenBottom.url}}" style="height:250px;" />

            <button class="button is-rounded w3-display-left" onclick="plusDivs(-1, 1)">
                &#10094;
            </button>
            <button class="button is-rounded w3-display-right" onclick="plusDivs(1, 1)">
                &#10095;
            </button>
            {{/each}}
        </div>

        <div id="dresses" class="w3-content w3-display-container">
            {{!-- for each DRESS --}}
            {{#each dress}}
            <img class="mySlides3" src="{{chooseDress.url}}" style="height:250px" />

            <button class="button is-rounded w3-display-left" onclick="plusDivs(-1, 2)">
                &#10094;
            </button>
            <button class="button is-rounded w3-display-right" onclick="plusDivs(1, 2)">
                &#10095;
            </button>
            {{/each}}
        </div>
        <div id="shoes" class="w3-content w3-display-container">
            {{!-- for each SHOE --}}
            {{#each shoes}}
            <img class="mySlides4" src="{{choosenShoe.url}}" style="height:250px;" />

            <button class="button is-rounded w3-display-left" onclick="plusDivs(-1, 3)">
                &#10094;
            </button>
            <button class="button is-rounded w3-display-right" onclick="plusDivs(1, 3)">
                &#10095;
            </button>
            {{/each}}
        </div>
        <div class="columns">
            <div class="column is-offset-3">
                {{!-- ADDS THESE CHOOSEN CLOTHES TO THE OUTFIT PAGE/TABLE --}}
                <button class="button is-rounded">Save this Look!</button>
            </div>
            <div class="column">
                {{!-- TAKES  USER TO THE OUTFITS PAGE--}}
                <a href="#">
                    <button class="button is-rounded">Saved Outfits</button>
                </a>
            </div>
        </div>
    </div>
</div>